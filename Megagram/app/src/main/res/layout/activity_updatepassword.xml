<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UpdatePassword">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/imgbtnBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back_button"
            style="?android:buttonBarButtonStyle"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#161517"
            android:text="Update Password"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textSize="32sp"
             />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current password:"
            android:paddingLeft="25dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/current_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter current password"
                android:textSize="20dp"
                android:textColorHint="#979398"
                android:layout_marginTop="20dp"
                android:layout_marginRight="35dp"
                android:layout_marginLeft="35dp"
                android:inputType="textPassword"

                />
            <ImageButton
                android:id="@+id/imgV_eye_currentPass"
                android:layout_marginLeft="-100dp"
                android:layout_marginTop="15dp"
                style="?android:buttonBarButtonStyle"
                android:paddingBottom="5dp"
                android:src="@drawable/eye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New password:"
            android:paddingLeft="25dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            />
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter new password"
            android:textSize="20dp"
            android:textColorHint="#979398"
            android:layout_marginTop="20dp"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="35dp"
            android:inputType="textPassword"

            />
        <ImageButton
            android:id="@+id/imgV_eye_newPass"
            android:layout_marginLeft="-100dp"
            android:layout_marginTop="15dp"
            style="?android:buttonBarButtonStyle"
            android:paddingBottom="5dp"
            android:src="@drawable/eye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm new password"
                android:textSize="20dp"
                android:textColorHint="#979398"
                android:layout_marginTop="20dp"
                android:layout_marginRight="35dp"
                android:layout_marginLeft="35dp"
                android:inputType="textPassword"

                />
            <ImageButton
                android:id="@+id/imgV_eye_confirmPass"
                android:layout_marginLeft="-100dp"
                android:layout_marginTop="15dp"
                style="?android:buttonBarButtonStyle"
                android:paddingBottom="5dp"
                android:src="@drawable/eye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/custom_button_simple1"
            android:text="UPDATE"
            android:textColor="#ffff"
            app:backgroundTint="@null" />
    </LinearLayout>
</LinearLayout>