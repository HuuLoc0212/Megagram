<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MyProfile">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:src="@drawable/anhbia"
            android:layout_marginBottom="500dp"
            android:scaleType="centerCrop"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/avatar_thong"
            android:layout_gravity="center"
            android:layout_marginTop="75dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back_white"
                style="?android:buttonBarButtonStyle"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="My Profile"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:paddingLeft="40dp"/>
        </LinearLayout>

    </FrameLayout>
    <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mạnh Thông"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@android:color/black"
            />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="20dp"
                    android:text="Name:    "
                    android:textColor="#161517"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"

                    />

                <TextView
                    android:id="@+id/edt_Name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Bùi Trương Mạnh Thông"
                    android:textSize="20dp"
                    android:inputType="text"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"

                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="20dp"
                    android:text="Sex:   "
                    android:textColor="#161517"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"

                    />

                <TextView
                    android:id="@+id/edt_sex"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Male"
                    android:textSize="20dp"
                    android:inputType="text"
                    android:layout_marginLeft="35dp"
                    android:gravity="center_vertical"

                    />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="20dp"
                    android:text="Birthday:  "
                    android:textColor="#161517"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"

                    />

                <TextView
                    android:id="@+id/edt_date"
                    android:text="11/05/1999"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="20dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="25dp"
                    android:text="Mobile:    "
                    android:textColor="#161517"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"

                    />

                <TextView
                    android:id="@+id/edt_phone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="0948797825"
                    android:textSize="20dp"
                    android:inputType="text"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"

                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"


                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="25dp"
                    android:text="Mail:        "
                    android:textColor="#161517"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    />

                <TextView
                    android:id="@+id/edt_mail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="manhthong@gmail.com"
                    android:textSize="20dp"
                    android:inputType="text"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:textStyle="italic"
                    />


            </LinearLayout>
<!--            <ImageButton-->
<!--                android:id="@+id/btnEditProfile"-->
<!--                android:layout_width="30dp"-->
<!--                android:layout_height="30dp"-->
<!--                android:layout_gravity="right"-->
<!--                android:layout_marginRight="20dp"-->
<!--                android:background="@drawable/edit_profile"-->
<!--                />-->
            <ImageButton
                android:id="@+id/btnEditProfile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/custom_button_simple1"
                android:src="@drawable/ic_edit_profile_24"
                android:layout_marginLeft="320dp"
                android:layout_marginTop="40dp"
                />
        </LinearLayout>

    </ScrollView>

</LinearLayout>